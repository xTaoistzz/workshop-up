{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "logs",
      "title": "App1 Logs",
      "id": 1,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false,
        "showLabels": false,
        "showCommonLabels": false,
        "enableLogDetails": true,
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{service=\"app1\"}",
          "refId": "A",
          "queryType": "range"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Log Volume",
      "id": 2,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"app1\"}[$__interval]))",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "legend": {
          "showLegend": true,
          "placement": "bottom",
          "displayMode": "list"
        }
      }
    },

    {
      "type": "logs",
      "title": "Error Logs",
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "{service=\"app1\"} |~ \"(?i)error\"",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending"
      }
    },

    {
      "type": "logs",
      "title": "Warning Logs",
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "{service=\"app1\"} |~ \"(?i)warn\"",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending"
      }
    },

    {
      "type": "stat",
      "title": "Total Logs (Selected Range)",
      "id": 5,
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 24 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"app1\"}[$__range]))",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        }
      }
    },

    {
      "type": "stat",
      "title": "Error Count (Selected Range)",
      "id": 6,
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 24 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"app1\"} |~ \"(?i)error\" [$__range]))",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        }
      }
    },

    {
      "type": "stat",
      "title": "Warning Count (Selected Range)",
      "id": 7,
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 24 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"app1\"} |~ \"(?i)warn\" [$__range]))",
          "refId": "A",
          "queryType": "range"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        }
      }
    }
  ],

  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["loki", "logs", "app1"],
  "templating": {
    "list": [
      {
        "name": "DS_LOKI",
